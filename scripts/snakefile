provinces = ['BC','AB','SAS','MAN','ONT','QC','NB','NL','NS','PEI']

#####################################
## TARGETS
#####################################

fileName = 'Canada'
inputDir = '../dataSources/'
outputDir = '../src/'

rule all:
	input: 
		outputDir + fileName + '.txt'

rule dataFile:
	input:
		outputDir + fileName + '.txt'

rule lpFile:
	input: 
		outputDir + fileName + '.lp'

#####################################
## INTERMEDIATE RULES
#####################################

rule AvailabilityFactor:
	output:
		outputDir + 'data/AvailabilityFactor.csv'
	shell:
		'python AvailabilityFactor.py'

rule CapacityFactor:
	input:
		inputDir + 'NREL_Costs.csv',
		expand(inputDir + 'CapacityFactor/PV_{province}.csv', province = provinces),
		expand(inputDir + 'CapacityFactor/WN_{province}.csv', province = provinces)
	output:
		outputDir + 'data/CapacityFactor.csv'
	shell:
		'python CapacityFactor.py'

rule CapacityToActivity:
	output:
		outputDir + 'CapacityToActivityUnit.csv'
	shell:
		'python CapacityToActivity.py'

rule Costs:
	input:
		inputDir + 'NREL_Costs.csv',
		inputDir + 'P2G_FC_Costs.xlsx'
	output:
		outputDir + 'data/CapitalCost.csv',
		outputDir + 'data/FixedCost.csv',
		outputDir + 'data/VariableCost.csv'
	shell:
		'python Costs.py'

rule EmissionActivityRatio:
	input:
		inputDir + 'EmissionActivityRatioByTechnology.csv'
	output:
		outputDir + 'data/EmissionActivityRatio.csv'
	shell:
		'python EmissionActivityRatio.py'

rule ActivityRatio:
	input:
		inputDir + 'InputActivityRatioByTechnology.csv', 
		inputDir + 'OutputActivityRatioByTechnology.csv'
	output:
		outputDir + 'data/InputActivityRatio.csv',
		outputDir + 'data/OutputActivityRatio.csv'
	shell:
		'python InOutActivityRatio.py'

rule ReserveMargin:
	input:
		inputDir + 'ProvincialAnnualDemand.csv'
	output:
		outputDir + 'data/ReserveMargin.csv'
	shell:
		'python ReserveMargin.py'

rule ResidualCapacity:
	input:
		inputDir + 'OperationalLifeTechnology.csv',
		inputDir + 'ResidualCapacitiesByProvince.csv'
	output:
		outputDir + 'data/ResidualCapacity.csv',
		outputDir + 'data/OperationalLife.csv'
	shell:
		'python ResidualCapacity.py'

rule AnnualDemand:
	input:
		inputDir + 'ProvincialAnnualDemand.csv'
	output:
		outputDir + 'data/SpecifiedAnnualDemand.csv'
	shell:
		'python SpecifiedAnnualDemand.py'

rule DemandProfile:
	input:
		inputDir + 'ProvincialHourlyLoads.xlsx'
	output:
		outputDir + 'data/SpecifiedDemandProfile.csv'
	shell:
		'python SpecifiedDemandProfile.py'

rule StorageCost:
	output:
		outputDir + 'data/CapitalCostStorage.csv'
	shell:
		'python StorageCosts.py'

rule StorageLife:
	output:
		outputDir + 'data/OperationalLifeStorage.csv'
	shell:
		'python StorageLife.py'

rule otooleConvert:
	input:
		datapackage = outputDir + 'datapackage.json',
		csvFiles = expand(outputDir + 'data/{osemosysFile}', osemosysFile = osemosysFiles)
	output:
		outputDir + fileName + '.txt'
	shell:
		'otoole convert datapackage datafile {input.datapackage} {output}'

rule createLP:
	input:
		modelFile = outputDir + 'Osemosys_TacoMod.txt',
		dataFile = outputDir + fileName + '.txt'
	output:
		outputDir + fileName + '.lp'
	shell:
		'glpsol -m {input.modelFile} -d {input.dataFile} --wlp {output} --check'


#####################################
## CLEANING RULES
#####################################

