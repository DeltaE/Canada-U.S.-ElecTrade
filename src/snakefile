#####################################
## TARGETS
#####################################

configfile: '../scripts/config.yaml'
fileName = 'CanadaUSA'
inputDir = '../dataSources/'
scriptsDir = '../scripts/'
outputDir = '../src/'
canadaProvinces = list(itertools.chain.from_iterable(
	config['subregions_dictionary']['CAN'].values()))

rule all:
	input: 
		outputDir + fileName + '.txt'

rule dataFile:
	input:
		outputDir + fileName + '.txt'

rule lpFile:
	input: 
		outputDir + fileName + '.lp'

#####################################
## INTERMEDIATE RULES
#####################################

rule MakeSets:
	input:
		inputDir + 'Trade.csv',
		inputDir + 'USA_Trade.csv',
		inputDir + 'USA_Data.xlsx'
	output:
		outputDir + 'data/YEAR.csv',
		outputDir + 'data/REGION.csv',
		outputDir + 'data/EMISSION.csv',
		outputDir + 'data/STORAGE.csv',
		outputDir + 'data/TECHNOLOGY.csv',
		outputDir + 'data/FUEL.csv'
	shell:
		'python ' + scriptsDir + 'MakeSets.py'

rule AvailabilityFactor:
	input:
		outputDir + 'data/YEAR.csv',
		outputDir + 'data/REGION.csv',
		inputDir + 'USA_Data.xlsx'
	output:
		outputDir + 'data/AvailabilityFactor.csv'
	shell:
		'python ' + scriptsDir + 'AvailabilityFactor.py'

rule CapacityFactor:
	input:
		outputDir + 'data/YEAR.csv',
		outputDir + 'data/REGION.csv',
		inputDir + 'NREL_Costs.csv',
		inputDir + 'USA_Data.xlsx',
		expand(inputDir + 'CapacityFactor/SPV_{province}.csv', 
			province = canadaProvinces),
		expand(inputDir + 'CapacityFactor/WND_{province}.csv', 
			province = canadaProvinces)
	output:
		outputDir + 'data/CapacityFactor.csv'
	shell:
		'python ' + scriptsDir + 'CapacityFactor.py'

rule CapacityToActivity:
	input:
		outputDir + 'data/REGION.csv',
		outputDir + 'data/TECHNOLOGY.csv',
		inputDir + 'USA_Trade.csv',
		inputDir + 'USA_Data.xlsx'
	output:
		outputDir + 'data/CapacityToActivityUnit.csv'
	shell:
		'python ' + scriptsDir + 'CapacityToActivity.py'

rule Costs:
	input:
		outputDir + 'data/YEAR.csv',
		outputDir + 'data/REGION.csv',
		inputDir + 'NREL_Costs.csv',
		inputDir + 'P2G_FC_Costs.xlsx',
		inputDir + 'Trade.csv',
		inputDir + 'USA_Trade.csv',
		inputDir + 'USA_Data.xlsx'
	output:
		outputDir + 'data/CapitalCost.csv',
		outputDir + 'data/FixedCost.csv',
		outputDir + 'data/VariableCost.csv'
	shell:
		'python ' + scriptsDir + 'Costs.py'

rule EmissionActivityRatio:
	input:
		inputDir + 'EmissionActivityRatioByTechnology.csv',
		outputDir + 'data/YEAR.csv',
		outputDir + 'data/REGION.csv',
		inputDir + 'USA_Data.xlsx'
	output:
		outputDir + 'data/EmissionActivityRatio.csv'
	shell:
		'python ' + scriptsDir + 'EmissionActivityRatio.py'

rule InOutActivityRatio:
	input:
		inputDir + 'InputActivityRatioByTechnology.csv', 
		inputDir + 'OutputActivityRatioByTechnology.csv',
		outputDir + 'data/YEAR.csv',
		outputDir + 'data/REGION.csv',
		inputDir + 'Trade.csv',
		inputDir + 'USA_Trade.csv',
		inputDir + 'USA_Data.xlsx'
	output:
		outputDir + 'data/InputActivityRatio.csv',
		outputDir + 'data/OutputActivityRatio.csv'
	shell:
		'python ' + scriptsDir + 'InOutActivityRatio.py'

rule ReserveMargin:
	input:
		outputDir + 'data/YEAR.csv',
		outputDir + 'data/REGION.csv',
		inputDir + 'ProvincialAnnualDemand.csv',
		inputDir + 'USA_Demand.xlsx',
		inputDir + 'USA_Data.xlsx'
	output:
		outputDir + 'data/ReserveMargin.csv',
		outputDir + 'data/ReserveMarginTagTechnology.csv',
		outputDir + 'data/ReserveMarginTagFuel.csv'
	shell:
		'python ' + scriptsDir + 'ReserveMargin.py'

rule ResidualCapacity:
	input:
		outputDir + 'data/YEAR.csv',
		outputDir + 'data/REGION.csv',
		inputDir + 'OperationalLifeTechnology.csv',
		inputDir + 'ResidualCapacitiesByProvince.csv',
		inputDir + 'Trade.csv',
		inputDir + 'USA_Trade.csv',
		inputDir + 'USA_Data.xlsx'
	output:
		outputDir + 'data/ResidualCapacity.csv',
		outputDir + 'data/OperationalLife.csv'
	shell:
		'python ' + scriptsDir + 'ResidualCapacity.py'

